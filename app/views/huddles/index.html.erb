<div class="row">
  <div class="small-12 large-12 columns huddles_framing panel">
    <%= link_to "Create a new Huddle!", new_huddle_path, class: "button radius " %>

    <%-if current_user != nil %>
      <%- currently_in = Huddle.current_users_huddle_finder(current_user) %>
      <%- if currently_in != [] %>
        <p> Huddles Your Currently In</p>
        <div class="row">
          <%- currently_in.each do |huddle| %>
              <div class="small-12 large-3 columns huddles_framing my_huddles">
                <p>City:</p><%= huddle.location.city %>
                <p>Court:</p><%= huddle.location.court_name %>
                <%- if User.where(id: huddle.creator).first.username != nil -%>
                  <p> Created by: </p><%= User.where(id: huddle.creator).first.username %>
                <%- else -%>
                  <p> Created by: </p><%= User.where(id: huddle.creator).first.username %>
                <%- end -%>
                <%if huddle.huddle_full? %>
                  <p>This Huddle is full</p>
                <% end %>
                <div class="row">
                <%= link_to "Explore this Huddle", huddle, method: :get, class: "button small radius center_text" %>
                </div>
              </div>
          <%- end %>
          <% if currently_in.count < 3 %>
            <div class="large-6 columns">
              <%= image_tag "Basketball-Ball-icon.png", {height: 45} %>
            </div>
          <% elsif currently_in.count < 4 %>
            <div class="large-3 columns">
              <%= image_tag "Basketball-Ball-icon.png", {height: 45} %>
            </div>
          <%-end-%>
        </div>
      <%- end -%>
    <%-end-%>
  </div>
</div>

<h2 class="center_text">Open Huddles. Get in there!</h2>


<div class="row">
    <%- @huddles.each do |huddle| -%>
        <div class="small-12 large-6 columns panel huddles_framing huddles">
          <%- if huddle.huddle_full? -%>
            <p> This Huddle is full </p>
          <%- end -%>
          <%- if User.where(id: huddle.creator).first.username != nil -%>
              <p><%= "Team captain: " %></p>
              <p><%= User.where(id: huddle.creator).first.username %></p>
            <%- else -%>
              <p><%= "Team captain: " %>
              <p><%= User.where(id: huddle.creator).first.email %></p>
          <%- end -%>
          <%= link_to "Explore this Huddle", huddle, method: :get, class: "button small radius" %>
        </div>
    <%- end -%>
</div>


