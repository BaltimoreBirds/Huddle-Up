<h1>Open Huddles. Get in there!</h1>

<%= link_to "Create a new Huddle!", new_huddle_path %>

<%- @huddles.each do |huddle| -%>
  <%- creator = User.where(id: huddle.creator).last -%>

  <%- if creator.username != nil -%>
    <h3><%= "Creator: " %></h3><p><%= creator.username %></p>
  <%- else -%>
    <h3><%= "Creator: " %></h3><p><%= creator.email %></p>
  <%- end -%>

  <%= link_to "Explore this Huddle", huddle, method: :get %>
<%- end -%>
